<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <ImageView
        android:src="@drawable/background_mode_select"
        android:scaleType="centerCrop"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <ImageView
        android:id="@+id/button_confirm"
        android:scaleType="centerCrop"
        android:layout_width="match_parent"
        android:layout_height="77dp"
        android:layout_alignParentBottom="true"
        android:clickable="true" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2.1">
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/button_a_selected"
                    android:src="@drawable/button_a_selected"
                    android:layout_width="115dp"
                    android:layout_height="115dp"
                    android:layout_alignParentRight="true"
                    android:visibility="invisible"
                    android:clickable="true" />

                <ImageView
                    android:id="@+id/button_a_unselected"
                    android:layout_width="115dp"
                    android:layout_height="115dp"
                    android:layout_alignParentRight="true"
                    android:clickable="true" />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="18dp"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true">
            </LinearLayout>

            <RelativeLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/button_b_selected"
                    android:layout_width="115dp"
                    android:layout_height="115dp"
                    android:layout_alignParentLeft="true"
                    android:visibility="invisible"
                    android:clickable="true" />

                <ImageView
                    android:id="@+id/button_b_unselected"
                    android:layout_width="115dp"
                    android:layout_height="115dp"
                    android:layout_alignParentLeft="true"
                    android:clickable="true" />

            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="18dp">
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <RelativeLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/button_c_selected"
                    android:layout_width="115dp"
                    android:layout_height="115dp"
                    android:layout_alignParentRight="true"
                    android:visibility="invisible"
                    android:clickable="true" />

                <ImageView
                    android:id="@+id/button_c_unselected"
                    android:layout_width="115dp"
                    android:layout_height="115dp"
                    android:layout_alignParentRight="true"
                    android:clickable="true" />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="18dp"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true">
            </LinearLayout>

            <RelativeLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/button_d_selected"
                    android:layout_width="115dp"
                    android:layout_height="115dp"
                    android:layout_alignParentLeft="true"
                    android:visibility="invisible"
                    android:clickable="true" />

                <ImageView
                    android:id="@+id/button_d_unselected"
                    android:layout_width="115dp"
                    android:layout_height="115dp"
                    android:layout_alignParentLeft="true"
                    android:clickable="true" />

            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.3">
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>