<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <ImageView
        android:src="@drawable/background_profile"
        android:scaleType="centerCrop"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <ImageView
        android:id="@+id/button_get_started"
        android:scaleType="centerCrop"
        android:layout_width="match_parent"
        android:layout_height="77dp"
        android:layout_alignParentBottom="true"
        android:clickable="true" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.7">
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            
            <TextView
                android:id="@+id/text_user_name"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="30dp"
                android:text="What is your name?"
                android:textColor="#5D5D5D"
                android:textSize="8pt"/>

            <EditText
                android:id="@+id/edit_user_name"
                android:layout_marginTop="55dp"
                android:layout_marginLeft="30dp"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:maxLength="9"
                android:inputType="textPersonName"
                android:textColor="#5D5D5D"
                android:textSize="6pt"/>

        </RelativeLayout>

        <RelativeLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <TextView
                android:id="@+id/text_user_gender"
                android:layout_width="220dp"
                android:layout_height="50dp"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="30dp"
                android:text="What is your gender?"
                android:textColor="#5D5D5D"
                android:textSize="8pt"/>

            <ImageView
                android:id="@+id/button_user_male_unselected"
                android:src="@drawable/button_user_male_unselected"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginTop="55dp"
                android:layout_marginLeft="25dp"/>

            <ImageView
                android:id="@+id/button_user_male_selected"
                android:src="@drawable/button_user_male_selected"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginTop="55dp"
                android:layout_marginLeft="25dp"/>

            <TextView
                android:id="@+id/text_user_male"
                android:layout_width="40dp"
                android:layout_height="30dp"
                android:layout_toRightOf="@+id/button_user_male_unselected"
                android:layout_marginTop="48dp"
                android:layout_marginLeft="7dp"
                android:gravity="center"
                android:text="Male"
                android:textColor="#5D5D5D"
                android:textSize="7pt"/>

            <ImageView
                android:id="@+id/button_user_female_selected"
                android:src="@drawable/button_user_female_selected"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_toRightOf="@+id/text_user_male"
                android:layout_marginTop="55dp"
                android:layout_marginLeft="35dp"/>

            <ImageView
                android:id="@+id/button_user_female_unselected"
                android:src="@drawable/button_user_female_unselected"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_toRightOf="@+id/text_user_male"
                android:layout_marginTop="55dp"
                android:layout_marginLeft="35dp"/>

            <TextView
                android:id="@+id/text_user_female"
                android:layout_width="55dp"
                android:layout_height="30dp"
                android:layout_toRightOf="@+id/button_user_female_selected"
                android:layout_marginTop="48dp"
                android:layout_marginLeft="7dp"
                android:gravity="center"
                android:text="Female"
                android:textColor="#5D5D5D"
                android:textSize="7pt"/>


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <TextView
                android:id="@+id/text_character_name"
                android:layout_width="320dp"
                android:layout_height="50dp"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="30dp"
                android:text="What is your character's name?"
                android:textColor="#5D5D5D"
                android:textSize="8pt"
                android:visibility="invisible"/>

            <EditText
                android:id="@+id/edit_character_name"
                android:layout_marginTop="55dp"
                android:layout_marginLeft="30dp"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:maxLength="9"
                android:inputType="textPersonName"
                android:textColor="#5D5D5D"
                android:textSize="6pt"
                android:visibility="invisible"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <TextView
                android:id="@+id/text_character_gender"
                android:layout_width="320dp"
                android:layout_height="50dp"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="30dp"
                android:text="What is your character's gender?"
                android:textColor="#5D5D5D"
                android:textSize="8pt"
                android:visibility="invisible"/>

            <ImageView
                android:id="@+id/button_character_male_unselected"
                android:src="@drawable/button_character_male_unselected"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginTop="55dp"
                android:layout_marginLeft="25dp"
                android:visibility="invisible"/>

            <ImageView
                android:id="@+id/button_character_male_selected"
                android:src="@drawable/button_character_male_selected"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginTop="55dp"
                android:layout_marginLeft="25dp"
                android:visibility="invisible"/>

            <TextView
                android:id="@+id/text_character_male"
                android:layout_width="40dp"
                android:layout_height="30dp"
                android:layout_toRightOf="@+id/button_character_male_selected"
                android:layout_marginTop="48dp"
                android:layout_marginLeft="7dp"
                android:gravity="center"
                android:text="Male"
                android:textColor="#5D5D5D"
                android:textSize="7pt"
                android:visibility="invisible"/>

            <ImageView
                android:id="@+id/button_character_female_selected"
                android:src="@drawable/button_character_female_selected"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_toRightOf="@+id/text_character_male"
                android:layout_marginTop="55dp"
                android:layout_marginLeft="35dp"
                android:visibility="invisible"/>

            <ImageView
                android:id="@+id/button_character_female_unselected"
                android:src="@drawable/button_character_female_unselected"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_toRightOf="@+id/text_character_male"
                android:layout_marginTop="55dp"
                android:layout_marginLeft="35dp"
                android:visibility="invisible"/>

            <TextView
                android:id="@+id/text_character_female"
                android:layout_width="55dp"
                android:layout_height="30dp"
                android:layout_toRightOf="@+id/button_character_female_selected"
                android:layout_marginTop="48dp"
                android:layout_marginLeft="7dp"
                android:gravity="center"
                android:text="Female"
                android:textColor="#5D5D5D"
                android:textSize="7pt"
                android:visibility="invisible"/>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.5">
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>