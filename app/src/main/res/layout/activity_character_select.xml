<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <ImageView
        android:src="@drawable/background_home"
        android:scaleType="centerCrop"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <ImageView
        android:id="@+id/button_settings"
        android:src="@drawable/button_settings"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <ImageView
        android:id="@+id/button_yes_its_me"
        android:scaleType="centerCrop"
        android:layout_width="match_parent"
        android:layout_height="77dp"
        android:layout_alignParentBottom="true" />

    <ImageView
        android:id="@+id/button_yes_its_my_character"
        android:scaleType="centerCrop"
        android:layout_width="match_parent"
        android:layout_height="77dp"
        android:layout_alignParentBottom="true" />

    <View
        android:id="@+id/button_started"
        android:scaleType="centerCrop"
        android:layout_width="match_parent"
        android:layout_height="77dp"
        android:layout_alignParentBottom="true"
        android:clickable="true" />

    <ImageView
        android:id="@+id/character_red"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <ImageView
        android:id="@+id/character_green"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <ImageView
        android:id="@+id/character_blue"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <ImageView
        android:id="@+id/costume_bokhak"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <ImageView
        android:id="@+id/costume_intern"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <ImageView
        android:id="@+id/costume_kinder"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <View
        android:id="@+id/button_kinder"
        android:layout_toLeftOf="@+id/button_intern"
        android:layout_marginTop="53dp"
        android:layout_marginRight="28dp"
        android:layout_width="51dp"
        android:layout_height="64dp"
        android:clickable="true" />

    <View
        android:id="@+id/button_intern"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="53dp"
        android:layout_width="55dp"
        android:layout_height="64dp"
        android:clickable="true" />

    <View
        android:id="@+id/button_bokhak"
        android:layout_toRightOf="@+id/button_intern"
        android:layout_marginTop="53dp"
        android:layout_marginLeft="30dp"
        android:layout_width="50dp"
        android:layout_height="64dp"
        android:clickable="true" />

    <View
        android:id="@+id/button_blue"
        android:layout_toLeftOf="@+id/button_red"
        android:layout_marginTop="127dp"
        android:layout_marginRight="28dp"
        android:layout_width="51dp"
        android:layout_height="51dp"
        android:clickable="true" />

    <View
        android:id="@+id/button_red"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="127dp"
        android:layout_width="51dp"
        android:layout_height="51dp"
        android:clickable="true" />

    <View
        android:id="@+id/button_green"
        android:layout_toRightOf="@+id/button_red"
        android:layout_marginTop="127dp"
        android:layout_marginLeft="33dp"
        android:layout_width="50dp"
        android:layout_height="51dp"
        android:clickable="true" />

</RelativeLayout>